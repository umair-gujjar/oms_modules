<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_hryearlysalary">
    <t t-call="report.html_container">
      <t t-foreach="get_employee(data['form'])" t-as="employee">
        <t t-call="report.internal_layout">
            <div class="page">
                    <h2><span t-field="employee.company_id"/></h2>
                    <p> From 
                        <u><span t-esc="formatLang(data['form']['date_from'], date=True)"/></u> 
                    To  <u><span t-esc="formatLang(data['form']['date_to'], date=True)"/></u> </p>
                    <table class="table table-condensed table-bordered">
                        <tr>
                            <td><strong>Employee Code</strong></td>
                            <td>
                                <t t-if="employee.otherid">
                                    <span t-field="employee.otherid"/>
                                </t>
                            </td>
                            <td><strong>Employee Name</strong></td>
                            <td>
                                <t t-if="employee.name">
                                    <span t-field="employee.name"/>
                                </t>
                            </td>
                            <td><strong>Designation</strong></td>
                            <td>
                                <t t-if="employee.job_id">
                                    <span t-field="employee.job_id.name"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Cost Centre</strong></td>
                            <td>
                                <t t-if="employee.cost_centre">
                                    <span t-field="employee.cost_centre"/>
                                </t>
                            </td>
                            <td><strong>Days Worked</strong></td>
                            <td>
                                <t t-if="employee.address_home_id">
                                    <span t-field="employee.address_home_id.name"/>
                                </t>
                            </td>
                            <td><strong>Total Salary</strong></td>
                            <td>
                                <t t-if="employee.job_id">
                                    <span t-field="employee.job_id"/>
                                </t>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr><strong>Salary Structure</strong></tr>
                            <tr>
                                <th>Basic Salary</th>
                                <th>Medical</th>
                                <th>House Rent</th>
                                <th>Utilities</th>
                                <th>Cola</th>
                                <th>Bonus</th>
                                <th>Gross Salary</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="get_employee_detail(employee)"  t-as="data" >
                                <td> 
                                    <t t-if="data.wage">
                                        <span t-field="data.wage"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.wage">
                                        <span t-field="data.wage"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.wage">
                                        <span t-field="data.wage"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.wage">
                                        <span t-field="data.wage"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.wage">
                                        <span t-field="data.wage"/>
                                    </t>
                                </td>
                                <td> 
                                    <t t-if="data.bonus">
                                        <span t-field="data.bonus"/>
                                    </t>
                                </td>
                                <td> 
                                    <span t-field="data.bonus"/>
                                </td>
                            </tr> 
                            
                        </tbody>
                    </table>
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr><strong>Deductions</strong></tr>
                            <tr>
                                <th>Professional Tax</th>
                                <th>S.R Fund</th>
                                <th>EOBI</th>
                                <th>Loan and Advance</th>
                                <th>Food Expenses</th>
                                <th>Vechicle Running</th>
                                <th>other</th>
                                <th>Total Deduction</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="get_employee_detail(employee)"  t-as="data" >
                                <td> 
                                    <t t-if="data.p_tax">
                                        <span t-field="data.p_tax"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.sr_fund_ded">
                                        <span t-field="data.sr_fund_ded"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.eobi">
                                        <span t-field="data.eobi"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.loan_and_advance">
                                        <span t-field="data.loan_and_advance"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="data.food">
                                        <span t-field="data.food"/>
                                    </t>
                                </td>
                                <td> 
                                    <t t-if="data.v_running">
                                        <span t-field="data.v_running"/>
                                    </t>
                                </td>
                                <td> 
                                    <t t-if="data.other_ded">
                                        <span t-field="data.other_ded"/>
                                    </t>
                                </td>
                                <td> 
                                    <span t-field="data.other_ded"/>
                                </td>
                            </tr>   
                        </tbody>
                    </table>
                     <table class="table table-condensed table-bordered">
                        <thead>
                            <tr><strong>Reimburesment</strong></tr>
                            <tr>
                                <th>Medical OPD</th>
                                <th>Fuel/others</th>
                                <th>Overtime</th>
                                <th>SR</th>
                                <th>Mobile Expenses</th>
                                <th>other</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                           <tr t-foreach="get_employee_detail(employee)"  t-as="dat" >
                                <td> 
                                    <t t-if="dat.medical_opd">
                                        <span t-field="dat.medical_opd"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="dat.fuel_other">
                                        <span t-field="dat.fuel_other"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="dat.overtime">
                                        <span t-field="dat.overtime"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="dat.sr">
                                        <span t-field="dat.sr"/>
                                    </t>
                                </td>
                                 <td> 
                                    <t t-if="dat.mobile_expenses">
                                        <span t-field="dat.mobile_expenses"/>
                                    </t>
                                </td>
                                <td> 
                                    <t t-if="dat.other">
                                        <span t-field="dat.other"/>
                                    </t>
                                </td>
                                <td>  
                                    <span t-field="dat.other"/>
                                </td>
                            </tr> 
                        </tbody>
                    </table>
                    <div class="col-xs-4 pull-right" style="margin-top:30px;">
                        <p class="text-right"><strong>Net Transfer : <t t-esc="net_value"/> </strong></p>
                    </div>                        
            </div>
        </t>
        </t>
    </t>
</template>
</data>
</openerp>